<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:IncidentReportApp.ViewModels"
             x:Class="IncidentReportApp.Views.LoginPage"
             x:DataType="viewmodels:LoginViewModel"
             Shell.NavBarIsVisible="False"
             BackgroundColor="#F5F5F5">
<!--PUSH-->
    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="25" VerticalOptions="Center">

            <!-- Logo y Título -->
            <VerticalStackLayout Spacing="10" Margin="0,0,0,30">
                <Image Source="splash.png"
                WidthRequest="120"
                HeightRequest="120"
                Aspect="AspectFit"/>
                <Label Text="RapidIncident"
                       FontSize="32"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       TextColor="#2C3E50"/>

                <Label Text="Sistema de Gestión de Incidencias"
                       FontSize="14"
                       HorizontalOptions="Center"
                       TextColor="#7F8C8D"/>
            </VerticalStackLayout>

            <!-- Card de Login -->
            <Frame BackgroundColor="White"
                   CornerRadius="15"
                   HasShadow="True"
                   Padding="25"
                   Margin="0,20,0,0">

                <VerticalStackLayout Spacing="20">

                    <!-- Título del formulario -->
                    <Label Text="Iniciar Sesión"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="#2C3E50"
                           HorizontalOptions="Center"
                           Margin="0,0,0,10"/>

                    <!-- Campo Usuario -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Usuario"
                               FontSize="14"
                               TextColor="#2C3E50"
                               FontAttributes="Bold"/>

                        <Frame BorderColor="#BDC3C7"
                               CornerRadius="8"
                               Padding="0"
                               HasShadow="False">
                            <Entry Text="{Binding Username}"
                                   Placeholder="Ingresa tu usuario"
                                   PlaceholderColor="#95A5A6"
                                   TextColor="#2C3E50"
                                   FontSize="16"
                                   Margin="10,0"/>
                        </Frame>
                    </VerticalStackLayout>

                    <!-- Campo Contraseña -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Contraseña"
                               FontSize="14"
                               TextColor="#2C3E50"
                               FontAttributes="Bold"/>

                        <Frame BorderColor="#BDC3C7"
                               CornerRadius="8"
                               Padding="0"
                               HasShadow="False">
                            <Entry Text="{Binding Password}"
                                   Placeholder="Ingresa tu contraseña"
                                   PlaceholderColor="#95A5A6"
                                   TextColor="#2C3E50"
                                   FontSize="16"
                                   IsPassword="True"
                                   Margin="10,0"/>
                        </Frame>
                    </VerticalStackLayout>

                    <!-- Mensaje de Error -->
                    <Label Text="{Binding ErrorMessage}"
                           FontSize="14"
                           TextColor="#E74C3C"
                           IsVisible="{Binding ErrorMessage, Converter={StaticResource StringToBoolConverter}}"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center"/>

                    <!-- Botón Login -->
                    <Button Text="Iniciar Sesión"
                            Command="{Binding LoginCommand}"
                            BackgroundColor="#3498DB"
                            TextColor="White"
                            FontSize="16"
                            FontAttributes="Bold"
                            CornerRadius="8"
                            HeightRequest="50"
                            Margin="0,10,0,0"
                            IsEnabled="{Binding IsLoading, Converter={StaticResource InvertedBoolConverter}}"/>

                    <!-- Indicador de Carga -->
                    <ActivityIndicator IsRunning="{Binding IsLoading}"
                                      IsVisible="{Binding IsLoading}"
                                      Color="#3498DB"
                                      HeightRequest="40"/>

                </VerticalStackLayout>
            </Frame>

            <!-- Link de Registro -->
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="5" Margin="0,15,0,0">
                <Label Text="¿No tienes cuenta?"
                       FontSize="14"
                       TextColor="#7F8C8D"
                       VerticalOptions="Center"/>
                <Label Text="Regístrate"
                       FontSize="14"
                       TextColor="#3498DB"
                       FontAttributes="Bold"
                       VerticalOptions="Center">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding GoToRegisterCommand}" />
                    </Label.GestureRecognizers>
                </Label>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>