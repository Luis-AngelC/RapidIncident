<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:IncidentReportApp"
             xmlns:helpers="clr-namespace:IncidentReportApp.Helpers"
             x:Class="IncidentReportApp.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Converters -->
            <helpers:StringToBoolConverter x:Key="StringToBoolConverter" />
            <helpers:InvertedBoolConverter x:Key="InvertedBoolConverter" />
            <helpers:NullToBoolConverter x:Key="NullToBoolConverter" />
            <helpers:BoolToColorConverter x:Key="BoolToColorConverter" />
            <helpers:BoolToConnectionIconConverter x:Key="BoolToConnectionIconConverter" />
            <helpers:BoolToConnectionTextConverter x:Key="BoolToConnectionTextConverter" />
            <helpers:StatusToColorConverter x:Key="StatusToColorConverter" />
            <helpers:BoolToSyncTextConverter x:Key="BoolToSyncTextConverter" />

        </ResourceDictionary>
    </Application.Resources>
</Application>